{
  "name": "milkman-automation-tests",
  "version": "1.0.0",
  "description": "Comprehensive automation test suite for MilkMan application - API and Web UI tests",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:api && npm run test:ui",
    "test:api": "mocha tests/api/**/*.test.js --timeout 10000 --reporter mochawesome --reporter-options reportDir=reports/api,reportFilename=api-test-report",
    "test:ui": "mocha tests/ui/**/*.test.js --timeout 30000 --reporter mochawesome --reporter-options reportDir=reports/ui,reportFilename=ui-test-report",
    "test:api:only": "mocha tests/api/**/*.test.js --timeout 10000",
    "test:ui:only": "mocha tests/ui/**/*.test.js --timeout 30000",
    "test:smoke": "mocha tests/smoke/**/*.test.js --timeout 10000",
    "test:regression": "npm run test",
    "report": "node scripts/generate-report.js"
  },
  "keywords": [
    "automation",
    "testing",
    "api",
    "ui",
    "e2e"
  ],
  "author": "MilkMan Team",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.2",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "mochawesome": "^7.1.3",
    "selenium-webdriver": "^4.16.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {}
}